/* ========================================
   URBAN VIBES COFFEE - MODERN LANDING PAGE
   ======================================== */

/* Variables CSS */
:root {
  --cream: #F4F1EC;
  --teal: #3B6876;
  --charcoal: #232629;
  --tan: #BDA588;
  --white: #ffffff;
  --transition: all 0.3s ease;
}

/* ========================================
   ESTILOS GLOBALES
   ======================================== */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  line-height: 1.6;
  color: var(--charcoal);
  background-color: var(--cream);
  overflow-x: hidden; /* Previene scroll horizontal */
}

/* Mejoras de tipografía responsive */
html {
  font-size: 16px;
}

@media (max-width: 480px) {
  html {
    font-size: 14px;
  }
}

@media (min-width: 1200px) {
  html {
    font-size: 18px;
  }
}

/* Prevenir zoom en inputs en iOS */
input, textarea, select {
  font-size: 16px !important;
}

/* Mejorar touch targets para móviles */
button, .btn-primary, .btn-secondary {
  min-height: 44px;
  min-width: 44px;
}

.container {
  max-width: 1400px;
  margin: 0 auto;
  padding: 0 20px;
  width: 100%;
}

/* ========================================
   BOTONES GLOBALES
   ======================================== */
.btn-primary, .btn-secondary {
  padding: 1rem 2rem;
  border: none;
  border-radius: 50px;
  font-size: 1.1rem;
  font-weight: 600;
  cursor: pointer;
  transition: var(--transition);
  text-decoration: none;
  display: inline-block;
  text-align: center;
}

.btn-primary.small {
  padding: 0.8rem 1.5rem;
  font-size: 1rem;
}

.btn-primary.large {
  padding: 1.2rem 2.5rem;
  font-size: 1.2rem;
}

.btn-primary {
  background: var(--teal);
  color: var(--white);
}

.btn-primary:hover {
  background: var(--charcoal);
  transform: translateY(-3px);
  box-shadow: 0 10px 30px rgba(59, 104, 118, 0.3);
}

.btn-secondary {
  background: transparent;
  color: var(--teal);
  border: 2px solid var(--teal);
}

.btn-secondary:hover {
  background: var(--teal);
  color: var(--white);
  transform: translateY(-3px);
}

/* ========================================
   HEADER / NAVEGACIÓN
   ======================================== */
.header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1000;
  background: rgba(244, 241, 236, 0.95);
  backdrop-filter: blur(10px);
  transition: var(--transition);
  border-bottom: 1px solid rgba(59, 104, 118, 0.1);
}

.header.scrolled {
  background: rgba(244, 241, 236, 0.98);
  box-shadow: 0 2px 20px rgba(35, 38, 41, 0.1);
}

.nav {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 1rem 2rem;
  max-width: 1400px;
  margin: 0 auto;
}

.logo {
  display: flex;
  align-items: center;
  gap: 1rem;
}

.logo-image {
  width: 60px;
  height: 60px;
  object-fit: contain;
  border-radius: 50%;
  border: 2px solid var(--teal);
  padding: 5px;
  background: var(--white);
}

.brand-text {
  display: flex;
  flex-direction: column;
  font-weight: 900;
  line-height: 0.9;
}

.urban {
  font-size: 1.8rem;
  color: var(--charcoal);
}

.vibes {
  font-size: 1.8rem;
  color: var(--teal);
}

.nav-menu {
  display: flex;
  list-style: none;
  gap: 2rem;
}

.nav-menu button {
  background: none;
  border: none;
  color: var(--charcoal);
  font-weight: 500;
  font-size: 1rem;
  cursor: pointer;
  padding: 0.5rem 1rem;
  border-radius: 25px;
  transition: var(--transition);
}

.nav-menu button:hover {
  background: var(--teal);
  color: var(--white);
  transform: translateY(-2px);
}

.hamburger {
  display: none;
  flex-direction: column;
  cursor: pointer;
  gap: 4px;
  z-index: 1001;
}

.hamburger span {
  width: 25px;
  height: 3px;
  background: var(--charcoal);
  transition: var(--transition);
  border-radius: 2px;
}

.hamburger.active span:nth-child(1) {
  transform: rotate(45deg) translate(5px, 5px);
}

.hamburger.active span:nth-child(2) {
  opacity: 0;
}

.hamburger.active span:nth-child(3) {
  transform: rotate(-45deg) translate(7px, -6px);
}

.hamburger.active span:nth-child(1) {
  transform: rotate(45deg) translate(5px, 5px);
}

.hamburger.active span:nth-child(2) {
  opacity: 0;
}

.hamburger.active span:nth-child(3) {
  transform: rotate(-45deg) translate(7px, -6px);
}

/* ========================================
   HERO SECTION
   ======================================== */
.hero {
  min-height: 100vh;
  display: flex;
  align-items: center;
  padding: 120px 2rem 80px;
  background: linear-gradient(135deg, var(--cream) 0%, rgba(189, 165, 136, 0.1) 100%);
  position: relative;
  overflow: hidden;
}

.hero-content {
  max-width: 1400px; /* Aumentado para pantallas grandes */
  margin: 0 auto;
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 4rem;
  align-items: center;
  position: relative;
  z-index: 1;
}

/* Para pantallas ultra anchas */
@media (min-width: 1600px) {
  .hero-content {
    max-width: 1600px;
    gap: 6rem;
  }
  
  .hero-title {
    font-size: 4rem;
  }
  
  .hero-subtitle {
    font-size: 1.4rem;
  }
  
  .hero-photo-container {
    width: 450px;
    height: 450px;
  }
}

.hero-title {
  font-size: 3.5rem;
  font-weight: 900;
  line-height: 1.2;
  margin-bottom: 1.5rem;
  color: var(--charcoal);
  text-shadow: 0 2px 8px rgba(255, 255, 255, 0.8);
}

.highlight {
  color: var(--teal);
  position: relative;
}

.highlight::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 4px;
  background: var(--tan);
  border-radius: 2px;
}

.hero-subtitle {
  font-size: 1.25rem;
  color: var(--teal);
  margin-bottom: 1.5rem;
  line-height: 1.6;
  text-shadow: 0 1px 4px rgba(255, 255, 255, 0.8);
}

.hero-schedule {
  font-size: 1rem;
  color: var(--charcoal);
  background: var(--white);
  padding: 1rem;
  border-radius: 15px;
  box-shadow: 0 5px 15px rgba(35, 38, 41, 0.1);
  margin-bottom: 2rem;
  border-left: 4px solid var(--teal);
}

.hero-buttons {
  display: flex;
  gap: 1rem;
  flex-wrap: wrap;
}

.hero-image {
  display: flex;
  justify-content: center;
  align-items: center;
}

.hero-photo-container {
  position: relative;
  width: 400px;
  height: 400px;
  border-radius: 20px;
  overflow: hidden;
  box-shadow: 0 20px 60px rgba(35, 38, 41, 0.2);
  animation: float 6s ease-in-out infinite;
  background: linear-gradient(135deg, var(--teal), var(--tan));
  padding: 10px;
}

.hero-photo {
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-radius: 15px;
  transition: var(--transition);
}

.hero-photo:hover {
  transform: scale(1.05);
}

@keyframes float {
  0%, 100% { transform: translateY(0px); }
  50% { transform: translateY(-20px); }
}

/* ========================================
   MENU SECTION
   ======================================== */
.menu-section {
  padding: 80px 0;
  background: var(--white);
  position: relative;
  overflow: hidden;
}

.menu-section::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-image: url('/cocina.png');
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  opacity: 0.05;
  filter: blur(2px);
  z-index: 0;
}

.menu-section .container {
  position: relative;
  z-index: 1;
}

.section-title {
  text-align: center;
  font-size: 2.5rem;
  font-weight: 900;
  color: var(--charcoal);
  margin-bottom: 3rem;
  position: relative;
  text-shadow: 0 2px 4px rgba(255, 255, 255, 0.8);
}

.section-title::after {
  content: '';
  position: absolute;
  bottom: -10px;
  left: 50%;
  transform: translateX(-50%);
  width: 80px;
  height: 4px;
  background: var(--teal);
  border-radius: 2px;
}

.menu-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
  gap: 3rem;
  max-width: 1200px; /* Mantiene el menú centrado */
  margin: 0 auto;
}

/* Para pantallas grandes */
@media (min-width: 1400px) {
  .menu-grid {
    grid-template-columns: repeat(3, 1fr);
    max-width: 1400px;
  }
}

.menu-category {
  background: var(--cream);
  padding: 2rem;
  border-radius: 20px;
  box-shadow: 0 10px 30px rgba(35, 38, 41, 0.1);
  transition: var(--transition);
}

.menu-category:hover {
  transform: translateY(-5px);
  box-shadow: 0 20px 40px rgba(35, 38, 41, 0.15);
}

.menu-category h3 {
  color: var(--teal);
  font-size: 1.5rem;
  font-weight: 700;
  margin-bottom: 1.5rem;
  text-align: center;
}

.menu-items {
  display: flex;
  flex-direction: column;
  gap: 1.5rem;
}

.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  padding: 1.5rem 0;
  border-bottom: 1px solid rgba(59, 104, 118, 0.1);
  gap: 1rem;
}

.menu-item:last-child {
  border-bottom: none;
}

.item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
}

.item-name {
  font-weight: 700;
  color: var(--charcoal);
  font-size: 1.1rem;
}

.item-description {
  font-size: 0.9rem;
  color: var(--teal);
  opacity: 0.8;
  line-height: 1.4;
}

.item-prices {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
  align-items: flex-end;
  min-width: 120px;
}

.price-option {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  background: var(--white);
  padding: 0.3rem 0.8rem;
  border-radius: 15px;
  box-shadow: 0 2px 8px rgba(35, 38, 41, 0.1);
  transition: var(--transition);
}

.price-option:hover {
  transform: scale(1.05);
  box-shadow: 0 4px 12px rgba(35, 38, 41, 0.15);
}

.size {
  font-size: 0.8rem;
  font-weight: 600;
  color: var(--white);
  background: var(--teal);
  padding: 0.2rem 0.5rem;
  border-radius: 50%;
  min-width: 20px;
  text-align: center;
}

.price {
  font-weight: 700;
  color: var(--teal);
  font-size: 1rem;
}

.menu-intro {
  text-align: center;
  font-size: 1.1rem;
  color: var(--teal);
  margin-bottom: 3rem;
  max-width: 600px;
  margin-left: auto;
  margin-right: auto;
  text-shadow: 0 1px 3px rgba(255, 255, 255, 0.8);
}

.menu-cta {
  text-align: center;
  margin-top: 3rem;
}

.menu-note {
  font-size: 1rem;
  color: var(--charcoal);
  background: var(--cream);
  padding: 1.5rem;
  border-radius: 15px;
  border-left: 4px solid var(--tan);
  max-width: 600px;
  margin: 0 auto;
}

/* ========================================
   ABOUT SECTION
   ======================================== */
.about-section {
  padding: 80px 0;
  background: linear-gradient(135deg, var(--cream) 0%, rgba(189, 165, 136, 0.2) 100%);
}

.about-content {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 4rem;
  align-items: center;
}

.about-text h2 {
  font-size: 2.5rem;
  font-weight: 900;
  color: var(--charcoal);
  margin-bottom: 1.5rem;
}

.about-text p {
  font-size: 1.1rem;
  color: var(--teal);
  margin-bottom: 1.5rem;
  line-height: 1.7;
}

.features {
  display: flex;
  flex-direction: column;
  gap: 1rem;
  margin-top: 2rem;
}

.feature {
  display: flex;
  align-items: center;
  gap: 1rem;
  padding: 1rem;
  background: var(--white);
  border-radius: 15px;
  box-shadow: 0 5px 15px rgba(35, 38, 41, 0.1);
  transition: var(--transition);
}

.feature:hover {
  transform: translateX(10px);
}

.feature-icon {
  font-size: 1.5rem;
}

.kitchen-showcase {
  width: 100%;
  height: 400px;
  background: linear-gradient(135deg, var(--teal), var(--charcoal));
  border-radius: 20px;
  position: relative;
  overflow: hidden;
  box-shadow: 0 20px 60px rgba(35, 38, 41, 0.2);
}

.kitchen-showcase::before {
  content: '';
  position: absolute;
  top: 20px;
  left: 20px;
  right: 20px;
  bottom: 20px;
  background: var(--white);
  border-radius: 15px;
  opacity: 0.9;
}

.about-image {
  display: flex;
  justify-content: center;
  align-items: center;
}

.about-photo {
  width: 100%;
  max-width: 450px;
  height: 400px;
  object-fit: cover;
  border-radius: 20px;
  box-shadow: 0 20px 60px rgba(35, 38, 41, 0.2);
  transition: var(--transition);
  border: 5px solid var(--white);
}

.about-photo:hover {
  transform: scale(1.02);
  box-shadow: 0 25px 70px rgba(35, 38, 41, 0.3);
}

/* ========================================
   CONTACT SECTION
   ======================================== */
.contact-section {
  padding: 80px 0;
  background: var(--white);
}

.contact-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 4rem;
  max-width: 1000px;
  margin: 0 auto;
}

.contact-info h3,
.contact-form h3 {
  font-size: 1.5rem;
  font-weight: 700;
  color: var(--charcoal);
  margin-bottom: 2rem;
}

.contact-item {
  display: flex;
  align-items: center;
  gap: 1rem;
  margin-bottom: 1.5rem;
  padding: 1rem;
  background: var(--cream);
  border-radius: 15px;
  transition: var(--transition);
}

.contact-item:hover {
  transform: translateX(5px);
  box-shadow: 0 5px 15px rgba(35, 38, 41, 0.1);
}

.contact-item.clickable {
  cursor: pointer;
}

.contact-item.clickable:hover {
  background: var(--teal);
  color: var(--white);
  transform: translateX(10px);
}

.contact-icon {
  font-size: 1.5rem;
  width: 30px;
}

.quick-order {
  margin-top: 2rem;
  text-align: center;
}

.contact-intro {
  text-align: center;
  font-size: 1.1rem;
  color: var(--teal);
  margin-bottom: 3rem;
  max-width: 600px;
  margin-left: auto;
  margin-right: auto;
}

.contact-form form {
  display: flex;
  flex-direction: column;
  gap: 1.5rem;
}

.contact-form input,
.contact-form textarea {
  padding: 1rem;
  border: 2px solid var(--cream);
  border-radius: 15px;
  font-size: 1rem;
  transition: var(--transition);
  background: var(--cream);
}

.contact-form input:focus,
.contact-form textarea:focus {
  outline: none;
  border-color: var(--teal);
  background: var(--white);
}

/* ========================================
   FOOTER SECTION
   ======================================== */
.footer {
  background: var(--charcoal);
  color: var(--white);
  padding: 3rem 0 1rem;
}

.footer-content {
  display: grid;
  grid-template-columns: 1fr 1fr 1fr;
  gap: 2rem;
  align-items: center;
  margin-bottom: 2rem;
}

.footer-logo {
  display: flex;
  align-items: center;
  gap: 1rem;
  color: var(--white);
  font-weight: 900;
  font-size: 1.2rem;
}

.footer-logo-image {
  width: 50px;
  height: 50px;
  object-fit: contain;
  border-radius: 50%;
  border: 2px solid var(--white);
  padding: 5px;
  background: var(--white);
}

.footer-links {
  display: flex;
  gap: 2rem;
  justify-content: center;
}

.footer-links a {
  color: var(--white);
  text-decoration: none;
  transition: var(--transition);
}

.footer-links a:hover {
  color: var(--tan);
}

.social-links {
  display: flex;
  align-items: center;
  gap: 1rem;
  justify-content: flex-end;
}

.social-links a {
  font-size: 1.5rem;
  text-decoration: none;
  transition: var(--transition);
}

.social-links a:hover {
  transform: scale(1.2);
}

.footer-bottom {
  text-align: center;
  padding-top: 2rem;
  border-top: 1px solid rgba(244, 241, 236, 0.2);
  color: var(--tan);
}

.footer-thanks {
  font-size: 0.9rem;
  margin-top: 0.5rem;
  font-style: italic;
}

.footer-brand {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.footer-slogan {
  margin: 1rem 0;
  color: var(--tan);
  font-style: italic;
}

.footer-info h4,
.footer-social h4 {
  color: var(--white);
  margin-bottom: 1rem;
  font-size: 1.1rem;
}

.hashtag {
  color: var(--tan);
  font-weight: 600;
  margin-top: 0.5rem;
}

/* ========================================
   HOW TO ORDER SECTION
   ======================================== */
.how-to-order-section {
  padding: 80px 0;
  background: var(--white);
}

.steps-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: 3rem;
  margin-bottom: 4rem;
  max-width: 1000px;
  margin-left: auto;
  margin-right: auto;
}

.step-card {
  text-align: center;
  padding: 2rem;
  background: var(--cream);
  border-radius: 20px;
  box-shadow: 0 10px 30px rgba(35, 38, 41, 0.1);
  transition: var(--transition);
  position: relative;
}

.step-card:hover {
  transform: translateY(-10px);
  box-shadow: 0 20px 40px rgba(35, 38, 41, 0.15);
}

.step-number {
  width: 60px;
  height: 60px;
  background: var(--teal);
  color: var(--white);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 1.5rem;
  font-weight: 900;
  margin: 0 auto 1.5rem;
  box-shadow: 0 5px 15px rgba(59, 104, 118, 0.3);
}

.step-title {
  font-size: 1.3rem;
  font-weight: 700;
  color: var(--charcoal);
  margin-bottom: 1rem;
}

.step-description {
  color: var(--teal);
  line-height: 1.6;
}

.order-cta {
  text-align: center;
}

.order-text {
  font-size: 1.3rem;
  color: var(--charcoal);
  font-weight: 600;
  margin-bottom: 2rem;
}

.delivery-info {
  margin-top: 1rem;
  color: var(--teal);
  font-size: 1rem;
  background: var(--cream);
  padding: 1rem;
  border-radius: 15px;
  display: inline-block;
}

/* ========================================
   COMMUNITY SECTION
   ======================================== */
.community-section {
  padding: 80px 0;
  background: linear-gradient(135deg, var(--cream) 0%, rgba(189, 165, 136, 0.2) 100%);
}

.community-intro {
  text-align: center;
  font-size: 1.1rem;
  color: var(--teal);
  margin-bottom: 3rem;
  max-width: 600px;
  margin-left: auto;
  margin-right: auto;
}

.testimonials-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: 2rem;
  margin-bottom: 4rem;
  max-width: 1000px;
  margin-left: auto;
  margin-right: auto;
}

.testimonial-card {
  background: var(--white);
  padding: 2rem;
  border-radius: 20px;
  box-shadow: 0 10px 30px rgba(35, 38, 41, 0.1);
  transition: var(--transition);
  text-align: center;
}

.testimonial-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 20px 40px rgba(35, 38, 41, 0.15);
}

.testimonial-rating {
  font-size: 1.2rem;
  margin-bottom: 1rem;
}

.testimonial-text {
  color: var(--charcoal);
  font-style: italic;
  margin-bottom: 1rem;
  line-height: 1.6;
}

.testimonial-author {
  color: var(--teal);
  font-weight: 600;
}

.community-cta {
  text-align: center;
  background: var(--white);
  padding: 3rem;
  border-radius: 20px;
  box-shadow: 0 10px 30px rgba(35, 38, 41, 0.1);
  max-width: 600px;
  margin: 0 auto;
}

.community-cta h3 {
  color: var(--charcoal);
  margin-bottom: 1rem;
  font-size: 1.5rem;
}

.community-cta p {
  color: var(--teal);
  margin-bottom: 1.5rem;
}

.social-hashtags {
  display: flex;
  justify-content: center;
  gap: 1rem;
  flex-wrap: wrap;
}

.social-hashtags span {
  background: var(--teal);
  color: var(--white);
  padding: 0.5rem 1rem;
  border-radius: 25px;
  font-size: 0.9rem;
  font-weight: 600;
}

/* ========================================
   ORDER PAGE
   ======================================== */
.order-page-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.8);
  z-index: 10000;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20px;
}

.order-page {
  background: var(--white);
  border-radius: 20px;
  max-width: 1200px;
  width: 100%;
  max-height: 90vh;
  overflow: hidden;
  box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
}

.order-header {
  background: var(--teal);
  color: var(--white);
  padding: 1.5rem 2rem;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.order-header h2 {
  margin: 0;
  font-size: 1.5rem;
}

.close-btn {
  background: none;
  border: none;
  color: var(--white);
  font-size: 1.5rem;
  cursor: pointer;
  padding: 0.5rem;
  border-radius: 50%;
  transition: var(--transition);
}

.close-btn:hover {
  background: rgba(255, 255, 255, 0.2);
}

.order-content {
  display: grid;
  grid-template-columns: 1fr 400px;
  height: calc(90vh - 100px);
  overflow: hidden;
}

.menu-selection {
  padding: 2rem;
  overflow-y: auto;
  border-right: 1px solid var(--cream);
}

.menu-selection h3 {
  color: var(--charcoal);
  margin-bottom: 2rem;
  font-size: 1.3rem;
}

.category-section {
  margin-bottom: 2rem;
}

.category-section h4 {
  color: var(--teal);
  margin-bottom: 1rem;
  font-size: 1.1rem;
  padding-bottom: 0.5rem;
  border-bottom: 2px solid var(--cream);
}

.items-grid {
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

.item-card {
  background: var(--cream);
  padding: 1rem;
  border-radius: 10px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  transition: var(--transition);
}

.item-card:hover {
  background: rgba(59, 104, 118, 0.1);
}

.item-info h5 {
  color: var(--charcoal);
  margin-bottom: 0.3rem;
  font-size: 1rem;
}

.item-info p {
  color: var(--teal);
  font-size: 0.9rem;
  margin: 0;
}

.size-options {
  display: flex;
  gap: 0.5rem;
}

.size-btn, .add-btn {
  background: var(--teal);
  color: var(--white);
  border: none;
  padding: 0.5rem 1rem;
  border-radius: 20px;
  font-size: 0.8rem;
  cursor: pointer;
  transition: var(--transition);
}

.size-btn:hover, .add-btn:hover {
  background: var(--charcoal);
  transform: translateY(-2px);
}

.cart-section {
  background: var(--cream);
  padding: 2rem;
  overflow-y: auto;
}

.cart-section h3 {
  color: var(--charcoal);
  margin-bottom: 1.5rem;
  font-size: 1.3rem;
}

.empty-cart {
  text-align: center;
  color: var(--teal);
  font-style: italic;
  margin: 2rem 0;
}

.cart-items {
  margin-bottom: 2rem;
}

.cart-item {
  background: var(--white);
  padding: 1rem;
  border-radius: 10px;
  margin-bottom: 1rem;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.cart-item-info h5 {
  color: var(--charcoal);
  margin-bottom: 0.3rem;
  font-size: 0.9rem;
}

.cart-item-info p {
  color: var(--teal);
  font-size: 0.8rem;
  margin: 0;
}

.cart-item-controls {
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.qty-btn {
  background: var(--teal);
  color: var(--white);
  border: none;
  width: 30px;
  height: 30px;
  border-radius: 50%;
  cursor: pointer;
  font-size: 1rem;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: var(--transition);
}

.qty-btn:hover {
  background: var(--charcoal);
}

.quantity {
  color: var(--charcoal);
  font-weight: 600;
  min-width: 20px;
  text-align: center;
}

.remove-btn {
  background: none;
  border: none;
  cursor: pointer;
  padding: 0.3rem;
  border-radius: 5px;
  transition: var(--transition);
}

.remove-btn:hover {
  background: rgba(255, 0, 0, 0.1);
}

.cart-total {
  background: var(--white);
  padding: 1.5rem;
  border-radius: 10px;
  margin-bottom: 1.5rem;
}

.total-line {
  display: flex;
  justify-content: space-between;
  margin-bottom: 0.5rem;
  color: var(--charcoal);
}

.total-line.final {
  font-weight: 700;
  font-size: 1.1rem;
  color: var(--teal);
  border-top: 1px solid var(--cream);
  padding-top: 0.5rem;
  margin-top: 0.5rem;
}

.delivery-note {
  font-size: 0.8rem;
  color: var(--teal);
  margin-top: 0.5rem;
  font-style: italic;
}

.customer-info {
  margin-bottom: 2rem;
}

.customer-info h4 {
  color: var(--charcoal);
  margin-bottom: 1rem;
  font-size: 1.1rem;
}

.customer-info input,
.customer-info textarea {
  width: 100%;
  padding: 0.8rem;
  border: 2px solid var(--cream);
  border-radius: 10px;
  margin-bottom: 1rem;
  font-size: 0.9rem;
  transition: var(--transition);
}

.customer-info input:focus,
.customer-info textarea:focus {
  outline: none;
  border-color: var(--teal);
}

.payment-method {
  margin-bottom: 1rem;
}

.payment-method label {
  display: block;
  color: var(--charcoal);
  font-weight: 600;
  margin-bottom: 0.5rem;
}

.payment-options {
  display: flex;
  gap: 1rem;
  flex-wrap: wrap;
}

.radio-option {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  padding: 0.8rem 1rem;
  border: 2px solid var(--cream);
  border-radius: 10px;
  cursor: pointer;
  transition: var(--transition);
  flex: 1;
  min-width: 120px;
}

.radio-option:hover {
  border-color: var(--teal);
  background-color: rgba(59, 104, 118, 0.05);
}

.radio-option input[type="radio"] {
  margin: 0;
  width: auto;
}

.radio-option input[type="radio"]:checked + span {
  color: var(--teal);
  font-weight: 600;
}

.radio-option span {
  color: var(--charcoal);
  font-size: 0.9rem;
}

.order-btn {
  width: 100%;
  background: var(--teal);
  color: var(--white);
  border: none;
  padding: 1rem;
  border-radius: 10px;
  font-size: 1.1rem;
  font-weight: 600;
  cursor: pointer;
  transition: var(--transition);
}

.order-btn:hover {
  background: var(--charcoal);
  transform: translateY(-2px);
}

/* ========================================
   RESPONSIVE DESIGN - MOBILE FIRST
   ======================================== */

/* Base styles - Mobile First (320px+) */
.container {
  max-width: 1400px;
  margin: 0 auto;
  padding: 0 15px;
}

/* Botones responsivos */
.btn-primary, .btn-secondary {
  padding: 0.8rem 1.5rem;
  border: none;
  border-radius: 50px;
  font-size: 1rem;
  font-weight: 600;
  cursor: pointer;
  transition: var(--transition);
  text-decoration: none;
  display: inline-block;
  width: 100%;
  max-width: 280px;
  text-align: center;
}

/* Pequeños móviles (320px - 480px) */
@media (max-width: 480px) {
  .container {
    padding: 0 10px;
  }
  
  .nav {
    padding: 0.8rem 1rem;
  }
  
  .brand-text .urban,
  .brand-text .vibes {
    font-size: 1.2rem;
  }
  
  .logo-image {
    width: 40px;
    height: 40px;
  }
  
  .hero {
    padding: 100px 1rem 60px;
  }
  
  .hero-title {
    font-size: 2rem;
    line-height: 1.2;
  }
  
  .hero-subtitle {
    font-size: 1rem;
  }
  
  .hero-photo-container {
    width: 250px;
    height: 250px;
  }
  
  .section-title {
    font-size: 1.8rem;
  }
  
  .menu-item {
    padding: 1rem;
  }
  
  .item-name {
    font-size: 1.1rem;
  }
  
  .about-section,
  .contact-section,
  .menu-section {
    padding: 40px 0;
  }
  
  .btn-primary, .btn-secondary {
    padding: 0.9rem 1.2rem;
    font-size: 0.95rem;
  }
}

/* Móviles (481px - 768px) */
@media (min-width: 481px) and (max-width: 768px) {
  .container {
    padding: 0 20px;
  }
  
  .nav {
    padding: 1rem 1.5rem;
  }
  
  .nav-menu {
    position: fixed;
    left: -100%;
    top: 70px;
    flex-direction: column;
    background-color: var(--white);
    width: 100%;
    text-align: center;
    transition: var(--transition);
    box-shadow: 0 10px 27px rgba(35, 38, 41, 0.1);
    padding: 2rem 0;
    z-index: 999;
  }

  .nav-menu.active {
    left: 0;
  }

  .hamburger {
    display: flex;
  }

  .hero-content {
    grid-template-columns: 1fr;
    text-align: center;
    gap: 2rem;
  }

  .hero-title {
    font-size: 2.5rem;
  }
  
  .hero-subtitle {
    font-size: 1.1rem;
  }
  
  .hero-photo-container {
    width: 300px;
    height: 300px;
  }

  .about-content {
    grid-template-columns: 1fr;
    text-align: center;
    gap: 2rem;
  }
  
  .about-photo {
    max-width: 100%;
    height: 250px;
  }

  .contact-grid {
    grid-template-columns: 1fr;
    gap: 2rem;
  }

  .footer-content {
    grid-template-columns: 1fr;
    text-align: center;
    gap: 2rem;
  }

  .social-links {
    justify-content: center;
  }

  .hero-buttons {
    justify-content: center;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
  }
  
  .menu-grid {
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }
  
  .steps-grid {
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }
  
  .features {
    grid-template-columns: 1fr;
    gap: 1rem;
  }
}

/* Tablets pequeñas (769px - 1024px) */
@media (min-width: 769px) and (max-width: 1024px) {
  .container {
    padding: 0 30px;
  }
  
  .hero-content {
    gap: 3rem;
  }
  
  .hero-title {
    font-size: 3rem;
  }
  
  .menu-grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 2rem;
  }
  
  .steps-grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 2rem;
  }
  
  .about-content {
    gap: 3rem;
  }
  
  .contact-grid {
    gap: 3rem;
  }
  
  .btn-primary, .btn-secondary {
    width: auto;
    padding: 1rem 2rem;
  }
}

/* Tablets grandes y laptops pequeñas (1025px - 1199px) */
@media (min-width: 1025px) and (max-width: 1199px) {
  .hero-content {
    gap: 4rem;
  }
  
  .hero-title {
    font-size: 3.5rem;
  }
  
  .menu-grid {
    grid-template-columns: repeat(3, 1fr);
    gap: 2.5rem;
  }
  
  .steps-grid {
    grid-template-columns: repeat(3, 1fr);
  }
}

/* Pantallas grandes (Desktop) */
@media (min-width: 1200px) and (max-width: 1919px) {
  .container {
    padding: 0 40px;
  }
  
  .hero {
    padding: 140px 4rem 100px;
  }
  
  .menu-section,
  .about-section,
  .contact-section {
    padding: 100px 0;
  }
  
  .btn-primary, .btn-secondary {
    width: auto;
    padding: 1rem 2rem;
  }
}

/* Pantallas muy grandes (21+ pulgadas) */
@media (min-width: 1920px) {
  .container {
    max-width: 1800px;
    padding: 0 60px;
  }
  
  .nav {
    max-width: 1800px;
    padding: 1.5rem 6rem;
  }
  
  .hero-content {
    max-width: 1800px;
    gap: 8rem;
  }
  
  .hero-title {
    font-size: 4.5rem;
  }
  
  .hero-subtitle {
    font-size: 1.5rem;
  }
  
  .section-title {
    font-size: 3rem;
  }
  
  .menu-grid {
    max-width: 1600px;
    gap: 4rem;
  }
  
  .about-content {
    gap: 6rem;
  }
  
  .contact-grid {
    gap: 6rem;
    max-width: 1400px;
  }
}

/* ========================================
   RESPONSIVE - ORDER PAGE
   ======================================== */

/* Móviles - Order Page */
@media (max-width: 768px) {
  .order-page-overlay {
    padding: 5px;
  }
  
  .order-page {
    width: 100%;
    height: 100vh;
    max-height: none;
    border-radius: 0;
  }
  
  .order-header {
    padding: 1rem;
    border-bottom: 1px solid #eee;
  }
  
  .order-header h2 {
    font-size: 1.3rem;
  }
  
  .close-btn {
    font-size: 1.5rem;
    padding: 0.5rem;
  }
  
  .order-content {
    grid-template-columns: 1fr;
    grid-template-rows: 1fr auto;
    height: calc(100vh - 80px);
    gap: 0;
  }
  
  .menu-selection {
    padding: 1rem;
    overflow-y: auto;
  }
  
  .category-section {
    margin-bottom: 1.5rem;
  }
  
  .category-section h4 {
    font-size: 1.1rem;
    margin-bottom: 1rem;
  }
  
  .items-grid {
    gap: 1rem;
  }
  
  .item-card {
    padding: 1rem;
  }
  
  .item-info h5 {
    font-size: 1rem;
  }
  
  .item-info p {
    font-size: 0.9rem;
  }
  
  .size-options {
    flex-direction: column;
    gap: 0.5rem;
  }
  
  .size-btn {
    padding: 0.5rem;
    font-size: 0.9rem;
  }
  
  .cart-section {
    max-height: 200px;
    border-top: 1px solid #eee;
    padding: 1rem;
  }
  
  .cart-item {
    flex-direction: column;
    gap: 0.5rem;
    align-items: flex-start;
    padding: 0.8rem;
  }
  
  .cart-item-info {
    width: 100%;
  }
  
  .payment-options {
    flex-direction: column;
    gap: 0.5rem;
  }
  
  .radio-option {
    flex: none;
    min-width: auto;
    justify-content: center;
  }
  
  .quantity-controls {
    margin-top: 0.5rem;
  }
  
  .customer-form {
    padding: 1rem;
  }
  
  .form-row {
    flex-direction: column;
    gap: 1rem;
  }
  
  .customer-form input,
  .customer-form textarea {
    font-size: 16px; /* Previene zoom en iOS */
  }
  
  .order-summary {
    padding: 1rem;
    margin-top: 1rem;
  }
  
  .send-order-btn {
    width: 100%;
    padding: 1rem;
    font-size: 1.1rem;
    position: sticky;
    bottom: 0;
    background: var(--white);
    border-top: 1px solid #eee;
  }
  
  .payment-options {
    flex-direction: column;
    gap: 0.5rem;
  }
  
  .radio-option {
    flex: none;
    min-width: auto;
    justify-content: center;
  }
}

/* Tablets - Order Page */
@media (min-width: 769px) and (max-width: 1024px) {
  .order-page {
    width: 95%;
    height: 90vh;
  }
  
  .order-content {
    grid-template-columns: 1fr 350px;
  }
  
  .items-grid {
    grid-template-columns: 1fr;
  }
}
